<h1><%= @restaurant.name %></h1>

<p><%=@restaurant.address%></p>
<p><%=@restaurant.phone_number%></p>
<p><%=@restaurant.category%></p>

<p><%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %></p>


<h4>Reviews</h4>

<ul>
    <% @restaurant.reviews.each do |review| %>
      <li>
        <%= review.content %>
        <%= review.rating %>
      </li>
    <% end %>
</ul>

<!-- Note - You can add a class into the link_to to add CSS styling -->
